# CogniVera Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-api-key-here

# Robot Hardware Configuration (optional)
ROBOT_HOST=192.168.125.1
ROBOT_PORT=5000
ROBOT_ENABLED=true

# Voice Configuration (optional)
VOICE_ENABLED=true
VOICE_MODEL=tts-1
VOICE_VOICE_PRESET=nova

# Logging Configuration (optional)
LOG_LEVEL=INFO
LOG_FILE=logs/experiment_log.csv

# Feature Flags (optional)
ENABLE_VALIDATION_AGENT=true
ENABLE_VISION=true
ENABLE_GREETING=true
DEV_MODE=false
